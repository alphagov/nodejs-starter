{
  "name": "nodejs-starter",
  "version": "1.0.0",
  "description": "A blank repo with nothing but a linter and formatter configured",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonheslop/nodejs-starter.git"
  },
  "keywords": [
    "nodejs",
    "js",
    "xo",
    "prettier"
  ],
  "author": "Jon Heslop",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jonheslop/nodejs-starter/issues"
  },
  "homepage": "https://github.com/jonheslop/nodejs-starter#readme",
  "xo": {
    "extends": [
      "prettier"
    ],
    "ignore": [
      "node_modules/**/*.*"
    ],
    "rules": {
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "always",
          "asyncArrow": "always"
        }
      ],
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ]
    },
    "semicolon": false
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "prettier": "^1.8.2",
    "xo": "^0.18.2"
  }
}
